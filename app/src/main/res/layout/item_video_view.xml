<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/common_padding_big"
    android:padding="@dimen/common_padding">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/medium_background_radius"
        app:cardBackgroundColor="@color/black_totally"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/item_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_no_video"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteTotally"
            android:alpha="0.4"/>

        <ImageView
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_button"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>

